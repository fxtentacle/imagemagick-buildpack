#!/usr/bin/env bash

set -e

mkdir -p "$1/bin/"
cp -a binaries-$STACK/* "$1/bin/"
im_version=$(LD_LIBRARY_PATH=$1/bin:/app/.apt/lib/x86_64-linux-gnu:/app/.apt/usr/lib:/app/.apt/usr/lib/x86_64-linux-gnu $1/bin/identify -version 2>&1 | tr '\n' ' ' )
echo "-----> imagemagick-buildpack: Installed to app/bin. ${im_version}"

exit 0
